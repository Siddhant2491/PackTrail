<%- include('./partials/header') %>

<% if (user.cart.length === 0) { %>
    <div class="w-full text-center py-20">
        <h2 class="text-2xl sm:text-3xl font-semibold text-gray-600">Your cart is empty ðŸ›’</h2>
        <a href="/shop" class="mt-6 inline-block bg-black text-white px-6 py-2 rounded-md hover:bg-gray-800 transition-all">
            Go to Shop
        </a>
    </div>
<% } else { %>
    <% user.cart.forEach((item) => {
        const product = item.product;
    %>
    <div class="w-full flex flex-col md:flex-row items-start px-5 sm:px-10 md:px-20 py-20 gap-8 md:gap-10">
        <!-- Product Card -->
        <div class="w-full md:w-[30%] rounded-md overflow-hidden">
            <div class="w-full h-40 sm:h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                <img class="w-5/6 h-5/6 object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
            </div>
            <div class="w-full flex justify-between flex-wrap gap-2 px-4 sm:px-5 py-3 sm:py-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                <h3 class="text-lg sm:text-2xl"><%= product.name %></h3>
                <div class="flex items-center gap-2">
                    <form method="POST" action="/cart/increase/<%= product._id %>">
                        <button type="submit" class="w-7 h-7 flex items-center justify-center rounded-full bg-white">
                            <i class="ri-add-line"></i>
                        </button>
                    </form>
                    <div class="px-2 py-1 rounded-md bg-white text-black text-sm sm:text-base"><%= item.quantity %></div>
                    <form method="POST" action="/cart/decrease/<%= product._id %>">
                        <button type="submit" class="w-7 h-7 flex items-center justify-center rounded-full bg-white">
                            <i class="ri-subtract-line"></i>
                        </button>
                    </form>
                </div>
            </div>
            <div class="flex items-center justify-between px-4 sm:px-5 py-2 sm:py-3 bg-[<%= product.textcolor %>] text-[<%= product.panelcolor %>]">
                <h4 class="text-base sm:text-lg">Net Total</h4>
                <h2 class="text-base sm:text-lg">â‚¹ <%= product.price * item.quantity %></h2>
            </div>
        </div>

        <!-- Price Breakdown -->
        <div class="w-full md:w-[70%]">
            <h3 class="text-lg sm:text-xl font-semibold">Price Breakdown</h3>
            <div class="px-5 sm:px-10 mt-5 space-y-2">
                <div class="flex justify-between">
                    <h4 class="w-1/2 sm:w-1/3">Total MRP</h4>
                    <h4>â‚¹ <%= product.price * item.quantity %></h4>
                </div>
                <div class="flex justify-between">
                    <h4 class="w-1/2 sm:w-1/3">Discount on MRP</h4>
                    <h4>â‚¹ <%= ((product.price * product.discount / 100) * item.quantity).toFixed(2) %></h4>
                </div>
                <div class="flex justify-between">
                    <h4 class="w-1/2 sm:w-1/3">Platform Fee</h4>
                    <h4>â‚¹ 20</h4>
                </div>
                <div class="flex justify-between">
                    <h4 class="w-1/2 sm:w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-8 sm:mt-10"></div>
            <div class="flex justify-between mt-5">
                <h3 class="w-1/2 sm:w-1/3 text-lg sm:text-xl">Total Amount</h3>
                <h3 class="font-semibold text-lg sm:text-xl text-green-600">
                    â‚¹ <%= ((product.price - (product.price * product.discount / 100)) * item.quantity + 20).toFixed(2) %>
                </h3>
            </div>
            <form action=""></form>
        </div>
    </div>
    <hr class="h-[2px] bg-gray-400 border-0">
    <% }) %>
<% } %>
