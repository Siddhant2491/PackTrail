<%- include('./partials/header') %>

<% if (error.length > 0) { %>
    <div class="bg-red-500 max-w-lg mx-auto left-1/2 -translate-x-1/2 transform rounded-md h-[40px] flex justify-center items-center text-white text-base sm:text-lg absolute px-4">
        <p><%= error %></p>
    </div>
<% } %>

<div class="w-full min-h-screen flex flex-col md:flex-row items-center justify-center px-6 sm:px-10 md:px-20 py-10">
    <div class="w-full md:w-1/2 flex items-center justify-center">
        <div class="w-full px-6 sm:px-10 md:px-32">
            <h4 class="text-xl sm:text-2xl capitalize mb-5 font-semibold">Admin Access</h4>
            <form action="/owner/login" method="post" class="w-full">
                <input 
                    class="block bg-zinc-100 w-full px-3 py-2 border rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input 
                    class="block bg-zinc-100 w-full px-3 py-2 border rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">

                <div class="flex flex-col sm:flex-row sm:justify-between gap-3">
                    <input 
                        class="px-5 py-3 rounded-full bg-blue-500 text-white cursor-pointer"
                        type="submit" value="Login">
                    <a 
                        class="px-5 py-3 rounded-full bg-blue-500 text-white text-center"
                        href="/">
                        Login As User
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
